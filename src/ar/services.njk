---
layout: page.njk
title: التدريب والاستشارات
permalink: /ar/services/index.html
description: "تدريب ذكاء اصطناعي واستشارات إبداعية للفرق والمبدعين (عربي/إنجليزي)."
---
{% set offers_ar = offers and offers.ar or {} %}
<section class="container section-pad svc-page" dir="rtl">
  <header class="svc-hero">
    <picture>
      <source media="(max-width: 720px)" srcset="{{ offers_ar.hero.image_mobile }}">
      <img class="svc-hero-img" src="{{ offers_ar.hero.image }}" alt="{{ offers_ar.hero.alt }}" loading="eager" decoding="async">
    </picture>
    <div class="svc-hero-overlay" style="--pattern-url: url('{{ offers_ar.hero.pattern }}')"></div>
    <div class="svc-hero-body">
      <h1>{{ offers_ar.hero.title }}</h1>
      <p class="lead">{{ offers_ar.hero.subtitle }}</p>
      <div class="svc-cta">
        <a class="btn btn-primary" href="{{ offers_ar.hero.cta_primary.url }}" target="_blank" rel="noopener">{{ offers_ar.hero.cta_primary.label }}</a>
        <a class="btn" href="{{ offers_ar.hero.cta_secondary.url }}" target="_blank" rel="noopener">{{ offers_ar.hero.cta_secondary.label }}</a>
        <a class="btn btn-ghost" href="{{ offers_ar.hero.cta_email.url }}">{{ offers_ar.hero.cta_email.label }}</a>
      </div>
    </div>
  </header>

  <section class="svc-who">
    <h2>مين أقدر أساعد؟</h2>
    <ul class="svc-who-list">
      {% for w in offers_ar.who %}<li>{{ w }}</li>{% endfor %}
    </ul>
  </section>

  <section class="svc-workshops">
    <h2>ورش مميّزة</h2>
    <div class="svc-grid">
      {% for w in offers_ar.workshops %}
      <article class="svc-card">
        <figure class="svc-thumb"><img src="{{ w.thumb }}" alt="{{ w.alt }}" loading="lazy" decoding="async"></figure>
        <div class="svc-card-body">
          <h3>{{ w.title }}</h3>
          <p class="svc-meta">{{ w.duration }} • {{ w.level }} • {{ w.format }}</p>
          <ul class="svc-bullets">{% for o in w.outcomes %}<li>{{ o }}</li>{% endfor %}</ul>
          <p class="svc-tools"><strong>الأدوات:</strong> {{ w.tools | join(', ') }}</p>
          <div class="svc-card-actions">
            <a class="btn btn-primary" href="mailto:ai.visionary.pioneer@gmail.com?subject=%D8%B7%D9%84%D8%A8%20%D9%85%D9%86%D9%87%D8%AC%20%D9%88%D8%B1%D8%B4%D8%A9%20(%20{{ w.id }}%20)">اطلب السِلبس</a>
            <a class="btn" href="https://wa.me/970599797245?text=%D9%88%D8%B1%D8%B4%D8%A9:%20{{ w.title | urlencode }}" target="_blank" rel="noopener">واتساب</a>
          </div>
        </div>
      </article>
      {% endfor %}
    </div>
  </section>

  <section class="svc-packages">
    <h2>باقات الاستشارات</h2>
    <div class="svc-grid">
      {% for p in offers_ar.packages %}
      <article class="svc-card">
        <figure class="svc-thumb"><img src="{{ p.thumb }}" alt="{{ p.alt }}" loading="lazy" decoding="async"></figure>
        <div class="svc-card-body">
          <h3>{{ p.title }}</h3>
          <p class="svc-meta">{{ p.who }}</p>
          <ul class="svc-bullets">{% for d in p.deliverables %}<li>{{ d }}</li>{% endfor %}</ul>
          <p class="svc-result"><strong>النتيجة:</strong> {{ p.result }}</p>
          <div class="svc-card-actions">
            <a class="btn btn-primary" href="https://wa.me/970599797245?text=%D8%A8%D8%A7%D9%82%D8%A9:%20{{ p.title | urlencode }}" target="_blank" rel="noopener">تواصل</a>
            <a class="btn btn-ghost js-copy" data-copy="https://wa.me/970599797245">نسخ واتساب</a>
          </div>
        </div>
      </article>
      {% endfor %}
    </div>
  </section>

  <section class="svc-cases">
    <h2>نماذج نجاح</h2>
    <div class="svc-grid">
      {% for c in offers_ar.cases %}
      <article class="svc-card">
        <figure class="svc-thumb"><img src="{{ c.thumb }}" alt="{{ c.alt }}" loading="lazy" decoding="async"></figure>
        <div class="svc-card-body">
          <h3>{{ c.title }}</h3>
          <p class="svc-meta"><strong>المشكلة:</strong> {{ c.problem }}</p>
          <p class="svc-meta"><strong>الأسلوب:</strong> {{ c.approach }}</p>
          <p class="svc-meta"><strong>النتيجة:</strong> {{ c.result }}</p>
        </div>
      </article>
      {% endfor %}
    </div>
  </section>

  <section class="svc-process">
    <h2>كيف نشتغل؟</h2>
    <figure class="svc-process-fig">
      <img src="{{ offers_ar.process.image }}" alt="{{ offers_ar.process.alt }}" loading="lazy" decoding="async">
    </figure>
    <ol class="svc-steps">{% for s in offers_ar.process.steps %}<li><strong>{{ s.title }}</strong> — {{ s.desc }}</li>{% endfor %}</ol>
  </section>

  <section class="svc-faq">
    <h2>أسئلة شائعة</h2>
    <div class="svc-faq-list">
      {% for f in offers_ar.faq %}
      <details class="svc-faq-item">
        <summary>{{ f.q }}</summary>
        <p>{{ f.a }}</p>
      </details>
      {% endfor %}
    </div>
  </section>

  <section class="svc-cta">
    <figure class="svc-cta-bg">
      <img src="{{ offers_ar.cta.image }}" alt="{{ offers_ar.cta.alt }}" loading="lazy" decoding="async">
    </figure>
    <div class="svc-cta-body">
      <h2>{{ offers_ar.cta.title }}</h2>
      <p class="lead">{{ offers_ar.cta.subtitle }}</p>
      <div class="svc-cta-actions">
        {% for b in offers_ar.cta.buttons %}
          <a class="btn {% if loop.index == 1 %}btn-primary{% endif %}" href="{{ b.url }}" target="_blank" rel="noopener">{{ b.label }}</a>
        {% endfor %}
      </div>
    </div>
  </section>
</section>

<script defer src="{{ '/js/services.js' | url }}"></script>
