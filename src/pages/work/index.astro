---
import BaseLayout from "../../layouts/BaseLayout.astro";
import CTAButtons from "../../components/CTAButtons.astro";
import Section from "../../components/Section.astro";
import { pinterestPlaceholderEn, workItemsEn } from "../../data/work";
import SmartImage from "../../components/SmartImage.astro";
---
<BaseLayout
  title="Work | Tamer Mansour"
  description="Explore cinematic AI-powered visual projects by Tamer Mansour across storytelling, education, and branded content."
  path="/work/"
>
  <Section
    title="Work that blends story and performance"
    copy="Each project is built to carry emotional weight while supporting strategic outcomes."
  >
    <div class="grid gap-6 md:grid-cols-2 xl:grid-cols-3">
      {
        workItemsEn.map((item) => (
          <article class="glass-card overflow-hidden">
            <SmartImage
              candidates={item.thumbRemoteCandidates}
              fallback={item.thumbLocal}
              alt={item.title}
              class="h-52 w-full object-cover"
            />
            <div class="p-5">
              <p class="text-xs uppercase tracking-wide text-gold">{item.type}</p>
              <h2 class="mt-2 text-lg font-semibold text-white">{item.title}</h2>
              <p class="mt-2 whitespace-pre-line text-sm text-sand/75">{item.description}</p>
              <a href={item.url} class="gold-link mt-4 inline-block text-sm font-semibold" target="_blank" rel="noreferrer">
                Watch on YouTube
              </a>
            </div>
          </article>
        ))
      }
    </div>
  </Section>
  <Section title={pinterestPlaceholderEn.title} copy={pinterestPlaceholderEn.description}>
    <a href={pinterestPlaceholderEn.url} class="gold-link text-sm font-semibold" target="_blank" rel="noreferrer">
      Open Pinterest
    </a>
  </Section>
  <Section title="Start your next visual story" copy="Share your goals and timeline. I will propose the strongest creative path.">
    <CTAButtons />
  </Section>
</BaseLayout>
