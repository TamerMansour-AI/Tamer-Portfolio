---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import CTAButtons from "../../../components/CTAButtons.astro";
import Section from "../../../components/Section.astro";
import { siteData, whatsappLinks } from "../../../data/site";
---
<BaseLayout
  title="تواصل | تامر منصور"
  description="احجز مكالمة أو راسل تامر منصور على واتساب لبدء مشروعك البصري القادم."
  path="/ar/contact/"
  lang="ar"
  dir="rtl"
>
  <Section
    title="لنصنع مشروعك القادم"
    copy="شارك الهدف والجمهور والمدة المتوقعة، وسأقترح خطة تنفيذ واضحة."
    className="text-right"
  >
    <div class="grid gap-6 lg:grid-cols-2">
      <article class="glass-card p-6">
        <h2 class="text-xl font-semibold text-white">قنوات التواصل المباشر</h2>
        <ul class="mt-4 space-y-3 text-sm text-sand/85">
          <li>البريد: <a class="gold-link" href={`mailto:${siteData.email}`}>{siteData.email}</a></li>
          <li>
            واتساب 1:
            <a class="gold-link" href={whatsappLinks.primary} target="_blank" rel="noreferrer">{siteData.whatsappPrimary}</a>
          </li>
          <li>
            واتساب 2:
            <a class="gold-link" href={whatsappLinks.secondary} target="_blank" rel="noreferrer">{siteData.whatsappSecondary}</a>
          </li>
          <li>الموقع: {siteData.location}</li>
        </ul>
      </article>
      <article class="glass-card p-6">
        <h2 class="text-xl font-semibold text-white">الحسابات الاجتماعية</h2>
        <ul class="mt-4 space-y-3 text-sm text-sand/85">
          <li><a class="gold-link" href={siteData.social.instagram} target="_blank" rel="noreferrer">Instagram</a></li>
          <li><a class="gold-link" href={siteData.social.facebook} target="_blank" rel="noreferrer">Facebook</a></li>
          <li><a class="gold-link" href={siteData.social.tiktok} target="_blank" rel="noreferrer">TikTok</a></li>
          <li><a class="gold-link" href={siteData.social.pinterest} target="_blank" rel="noreferrer">Pinterest</a></li>
        </ul>
      </article>
    </div>
    <CTAButtons
      className="mt-8"
      bookHref="/ar/contact/"
      labels={{ book: "احجز مكالمة", whatsapp: "راسلني على واتساب" }}
    />
  </Section>
</BaseLayout>
