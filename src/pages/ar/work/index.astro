---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import CTAButtons from "../../../components/CTAButtons.astro";
import Section from "../../../components/Section.astro";
import WorkCard from "../../../components/WorkCard.astro";
import { pinterestPlaceholderAr, workItemsAr } from "../../../data/work";
---
<BaseLayout
  title="الأعمال | تامر منصور"
  description="نماذج أعمال سينمائية وبصرية مدعومة بالذكاء الاصطناعي عبر السرد الإبداعي والتجريب العملي."
  path="/ar/work/"
  lang="ar"
  dir="rtl"
>
  <Section
    title="أعمال تمزج القصة بالأداء"
    copy="كل مشروع مصمم ليقدم أثرًا بصريًا واضحًا ونتيجة استراتيجية قابلة للقياس."
    className="text-right"
  >
    <div class="grid gap-6 md:grid-cols-2 xl:grid-cols-3">
      {workItemsAr.map((item) => <WorkCard item={item} lang="ar" imageClass="h-52 w-full object-cover" />)}
    </div>
  </Section>
  <Section title={pinterestPlaceholderAr.title} copy={pinterestPlaceholderAr.description} className="text-right">
    <a href={pinterestPlaceholderAr.url} class="gold-link text-sm font-semibold" target="_blank" rel="noreferrer">
      افتح Pinterest
    </a>
  </Section>
  <Section title="ابدأ قصتك القادمة" copy="شارك الهدف والجدول الزمني وسأقترح أفضل مسار إبداعي للتنفيذ." className="text-right">
    <CTAButtons bookHref="/ar/contact/" labels={{ book: "احجز مكالمة", whatsapp: "راسلني على واتساب" }} />
  </Section>
</BaseLayout>
