---
import CTAButtons from "../../components/CTAButtons.astro";
import SmartImage from "../../components/SmartImage.astro";
import Section from "../../components/Section.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { servicesAr } from "../../data/services";
import { siteData } from "../../data/site";
import { workItemsAr } from "../../data/work";
import { withBase } from "../../utils/withBase";
---
<BaseLayout
  title="تامر منصور | سرد بصري سينمائي بالذكاء الاصطناعي"
  description="إنتاج بصري احترافي يجمع بين السرد السينمائي وأنظمة الذكاء الاصطناعي لتحقيق أثر واضح وتحويل أعلى."
  path="/ar/"
  lang="ar"
  dir="rtl"
>
  <section class="container-shell py-16 sm:py-24">
    <p class="text-xs uppercase tracking-[0.2em] text-gold">صانع محتوى ذكاء اصطناعي • راوي بصري • مدرب واستشاري</p>
    <h1 class="mt-5 max-w-4xl text-4xl font-semibold tracking-tight text-white sm:text-6xl">
      سرد بصري سينمائي يحوّل الانتباه إلى ثقة، والثقة إلى نتيجة.
    </h1>
    <p class="mt-6 max-w-2xl text-base leading-relaxed text-sand/80">
      أساعد العلامات والفرق والمؤسسات على صناعة حضور بصري حديث عبر توجيه إبداعي واضح وسير عمل عملي بالذكاء الاصطناعي.
      من رام الله إلى جمهور عالمي، الهدف هو أثر حقيقي ونمو قابل للقياس.
    </p>
    <CTAButtons
      className="mt-8"
      bookHref="/ar/contact/"
      labels={{ book: "احجز مكالمة", whatsapp: "راسلني على واتساب" }}
    />
  </section>

  <Section
    title="لماذا يعمل معي العملاء؟"
    copy="لأنك لا تحتاج كمية محتوى فقط، بل تحتاج وضوح رسالة، جودة بصرية، وثباتاً في الأداء."
    className="text-right"
  >
    <div class="grid gap-4 sm:grid-cols-3">
      <article class="glass-card p-6">
        <h3 class="text-lg font-semibold text-white">دقة الرسالة</h3>
        <p class="mt-3 text-sm text-sand/80">كل مشهد يخدم تموضعك ويقود هدفك التجاري.</p>
      </article>
      <article class="glass-card p-6">
        <h3 class="text-lg font-semibold text-white">تنفيذ سينمائي</h3>
        <p class="mt-3 text-sm text-sand/80">لغة بصرية راقية مصممة لرفع التفاعل وترسيخ العلامة.</p>
      </article>
      <article class="glass-card p-6">
        <h3 class="text-lg font-semibold text-white">أنظمة عملية</h3>
        <p class="mt-3 text-sm text-sand/80">هيكلة إنتاج بالذكاء الاصطناعي قابلة للتطبيق والاستمرار.</p>
      </article>
    </div>
  </Section>

  <Section title="أعمال مختارة" copy="نماذج حديثة تجمع بين القصة والسرعة واللمسة السينمائية." className="text-right">
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {
        workItemsAr.slice(0, 3).map((item) => (
          <article class="glass-card overflow-hidden">
            <SmartImage candidates={item.thumbRemoteCandidates} fallback={item.thumbLocal} alt={item.title} class="h-48 w-full object-cover" />
            <div class="p-5">
              <p class="text-xs uppercase tracking-wide text-gold">{item.type}</p>
              <h3 class="mt-2 text-lg font-semibold text-white">{item.title}</h3>
              <p class="mt-2 text-sm text-sand/75">{item.description}</p>
              <a href={item.url} class="gold-link mt-4 inline-block text-sm font-semibold" target="_blank" rel="noreferrer">
                مشاهدة العمل
              </a>
            </div>
          </article>
        ))
      }
    </div>
    <a href={withBase("/ar/work/")} class="gold-link mt-8 inline-block text-sm font-semibold">عرض كل الأعمال</a>
  </Section>

  <Section title="الخدمات" copy="باقات احترافية موجّهة للتحويل والنمو." className="text-right">
    <div class="grid gap-4 md:grid-cols-3">
      {
        servicesAr.map((service) => (
          <article class="glass-card p-6">
            <h3 class="text-lg font-semibold text-white">{service.title}</h3>
            <p class="mt-3 text-sm text-sand/80">{service.summary}</p>
          </article>
        ))
      }
    </div>
    <a href={withBase("/ar/services/")} class="gold-link mt-8 inline-block text-sm font-semibold">تفاصيل الخدمات</a>
  </Section>

  <Section
    title="نبذة عن تامر"
    copy="أجمع بين الحس القصصي، التجريب الذكي، ونقل الخبرة العملية لصناعة نتائج واضحة."
    className="text-right"
  >
    <a href={withBase("/ar/about/")} class="gold-link text-sm font-semibold">اقرأ النبذة الكاملة</a>
  </Section>

  <Section title="جاهز للخطوة القادمة؟" copy="إذا كان مشروعك القادم يحتاج قصة أقوى وهوية بصرية أوضح، فلنبدأ." className="text-right">
    <CTAButtons bookHref="/ar/contact/" labels={{ book: "احجز مكالمة", whatsapp: "راسلني على واتساب" }} />
    <p class="mt-4 text-sm text-sand/70">{siteData.location}</p>
  </Section>
</BaseLayout>

