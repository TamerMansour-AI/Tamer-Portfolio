---
import BaseLayout from "../../layouts/BaseLayout.astro";
import CTAButtons from "../../components/CTAButtons.astro";
import Section from "../../components/Section.astro";
import SmartImage from "../../components/SmartImage.astro";
import { servicesEn } from "../../data/services";
---
<BaseLayout
  title="Services | Tamer Mansour"
  description="Premium offers for cinematic storytelling, AI media systems, and creator education."
  path="/services/"
>
  <section class="container-shell pt-6 sm:pt-8">
    <div class="overflow-hidden rounded-3xl border border-white/10 bg-white/5">
      <SmartImage
        fallback="/media/services/services-en.png"
        alt="Services overview poster"
        class="h-[34vh] w-full object-cover sm:h-[44vh] lg:h-[52vh]"
        loading="eager"
      />
    </div>
  </section>

  <Section
    title="Services designed for conversion and consistency"
    copy="Choose a focused engagement or combine offers into a full creative growth partnership."
  >
    <div class="grid gap-4 md:grid-cols-3">
      {
        servicesEn.map((service) => (
          <article class="glass-card p-6">
            <h2 class="text-xl font-semibold text-white">{service.title}</h2>
            <p class="mt-3 text-sm text-sand/80">{service.summary}</p>
            <ul class="mt-4 space-y-2 text-sm text-sand/80">
              {service.deliverables.map((item) => <li>â€¢ {item}</li>)}
            </ul>
          </article>
        ))
      }
    </div>
  </Section>
  <Section title="Book your strategy call" copy="A short call is enough to define scope, timeline, and expected outcome.">
    <CTAButtons />
  </Section>
</BaseLayout>
