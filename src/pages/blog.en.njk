---
layout: /src/layouts/base.njk
title: "Blog"
lang: en
permalink: "/blog/"
---


{% from "blog/pillars.njk" import Pillars %}
{% from "blog/card.njk" import PostCard %}

{{ Pillars(
  "7 Pillars of This Blog",
  "Themes that truly reflect me. Posts below are tagged accordingly.",
  blog_pillars.en
) }}

<section class="posts">
  <div class="section-head">
    <h2 class="section-title">Latest Posts</h2>
  </div>
  <div class="post-grid">
    {% set count = 0 %}
    {% for post in collections.blog %}
      {% if post.data.lang == "en" and not post.data.draft %}
        {{ PostCard(post) }}
        {% set count = count + 1 %}
      {% endif %}
    {% endfor %}
    {% if count == 0 %}
      <p class="empty">No posts yet. Add Markdown files under <code>/src/content/blog/</code> with tag <code>blog</code>.</p>
    {% endif %}
  </div>
</section>
