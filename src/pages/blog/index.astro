---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Section from "../../components/Section.astro";
import { withBase } from "../../utils/withBase";

const posts = [
  {
    title: "Jump Before You Feel Ready: Notes From a Palestinian Creative Who Finally Took the Risk",
    date: "February 2026",
    excerpt: "How I left my safe path, built a life around AI and storytelling, and what Iâ€™d tell anyone standing on the edge.",
    href: "/blog/jump-before-you-feel-ready/"
  }
];
---
<BaseLayout
  title="Blog | Tamer Mansour"
  description="Insights on cinematic storytelling, AI media systems, and practical creator education."
  path="/blog/"
>
  <Section title="Blog" copy="Thoughtful notes from the field: storytelling, AI systems, and creator growth.">
    <div class="space-y-4">
      {
        posts.map((post) => (
          <a href={withBase(post.href)} class="glass-card block p-6 transition hover:border-gold/50">
            <p class="text-xs uppercase tracking-wide text-gold">{post.date}</p>
            <h2 class="mt-2 text-xl font-semibold text-white">{post.title}</h2>
            <p class="mt-3 text-sm text-sand/80">{post.excerpt}</p>
            <p class="mt-4 text-sm font-semibold text-gold">Read article</p>
          </a>
        ))
      }
    </div>
  </Section>
</BaseLayout>
