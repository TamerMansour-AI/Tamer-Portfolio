---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Section from "../../components/Section.astro";

const posts = [
  {
    title: "How cinematic framing improves short-form retention",
    date: "February 2026",
    excerpt: "A practical breakdown of composition and pacing choices that keep viewers watching."
  },
  {
    title: "Building an AI media workflow your team can trust",
    date: "January 2026",
    excerpt: "System design principles to scale output without losing creative quality."
  },
  {
    title: "Teaching creative teams to think in stories, not assets",
    date: "December 2025",
    excerpt: "Why narrative clarity outperforms random content production in brand growth."
  }
];
---
<BaseLayout
  title="Blog | Tamer Mansour"
  description="Insights on cinematic storytelling, AI media systems, and practical creator education."
  path="/blog/"
>
  <Section title="Blog" copy="Thoughtful notes from the field: storytelling, AI systems, and creator growth.">
    <div class="space-y-4">
      {
        posts.map((post) => (
          <article class="glass-card p-6">
            <p class="text-xs uppercase tracking-wide text-gold">{post.date}</p>
            <h2 class="mt-2 text-xl font-semibold text-white">{post.title}</h2>
            <p class="mt-3 text-sm text-sand/80">{post.excerpt}</p>
          </article>
        ))
      }
    </div>
  </Section>
</BaseLayout>
