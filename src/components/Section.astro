---
type Props = {
  id?: string;
  title: string;
  copy?: string;
  className?: string;
};

const { id, title, copy, className = "" } = Astro.props;
---
<section id={id} class={`py-14 sm:py-20 ${className}`}>
  <div class="container-shell">
    <h2 class="section-title">{title}</h2>
    {copy && <p class="section-copy">{copy}</p>}
    <div class="mt-8">
      <slot />
    </div>
  </div>
</section>
