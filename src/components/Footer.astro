---
import { currentYear, siteData, whatsappLinks } from "../data/site";

type Props = {
  lang?: "en" | "ar";
  dir?: "ltr" | "rtl";
};

const { lang = "en", dir = "ltr" } = Astro.props;

const labels =
  lang === "ar"
    ? {
        follow: "تابعني",
        rights: "جميع الحقوق محفوظة",
        contact: "تواصل",
        location: "الموقع"
      }
    : {
        follow: "Follow",
        rights: "All rights reserved",
        contact: "Contact",
        location: "Location"
      };
---
<footer class="border-t border-white/10 py-10" dir={dir}>
  <div class="container-shell grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
    <div>
      <p class="text-sm font-semibold text-white">{siteData.name}</p>
      <p class="mt-3 text-sm text-sand/75">{siteData.title}</p>
    </div>
    <div>
      <p class="text-sm font-semibold text-white">{labels.contact}</p>
      <ul class="mt-3 space-y-2 text-sm text-sand/80">
        <li>
          <a class="gold-link" href={`mailto:${siteData.email}`}>{siteData.email}</a>
        </li>
        <li>
          <a class="gold-link" target="_blank" rel="noreferrer" href={whatsappLinks.primary}>
            {siteData.whatsappPrimary}
          </a>
        </li>
        <li>
          <a class="gold-link" target="_blank" rel="noreferrer" href={whatsappLinks.secondary}>
            {siteData.whatsappSecondary}
          </a>
        </li>
      </ul>
    </div>
    <div>
      <p class="text-sm font-semibold text-white">{labels.follow}</p>
      <ul class="mt-3 space-y-2 text-sm text-sand/80">
        <li><a class="gold-link" href={siteData.social.instagram} target="_blank" rel="noreferrer">Instagram</a></li>
        <li><a class="gold-link" href={siteData.social.facebook} target="_blank" rel="noreferrer">Facebook</a></li>
        <li><a class="gold-link" href={siteData.social.tiktok} target="_blank" rel="noreferrer">TikTok</a></li>
        <li><a class="gold-link" href={siteData.social.pinterest} target="_blank" rel="noreferrer">Pinterest</a></li>
      </ul>
    </div>
    <div>
      <p class="text-sm font-semibold text-white">{labels.location}</p>
      <p class="mt-3 text-sm text-sand/80">{siteData.location}</p>
    </div>
  </div>
  <div class="container-shell mt-8 border-t border-white/10 pt-4 text-xs text-sand/60">
    © {currentYear} {siteData.name}. {labels.rights}.
  </div>
</footer>
