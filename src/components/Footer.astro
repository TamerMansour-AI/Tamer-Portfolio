---
import { currentYear, siteData, whatsappLinks } from "../data/site";

type Props = {
  lang?: "en" | "ar";
  dir?: "ltr" | "rtl";
};

const { dir = "ltr" } = Astro.props;
---
<footer class="border-t border-white/10 py-10" dir={dir}>
  <div class="container-shell grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
    <div>
      <p class="text-sm font-semibold text-white">{siteData.name}</p>
      <p class="mt-3 text-sm leading-relaxed text-sand/75">{siteData.title}</p>
    </div>

    <div>
      <p class="text-sm font-semibold text-white">Contact</p>
      <ul class="mt-3 space-y-2 text-sm text-sand/80">
        <li>
          <span class="text-sand/60">Email:</span>
          <a class="gold-link ml-2" href={`mailto:${siteData.email}`}>{siteData.email}</a>
        </li>
        <li>
          <span class="text-sand/60">WhatsApp:</span>
          <a class="gold-link ml-2" target="_blank" rel="noreferrer" href={whatsappLinks.primary}>{siteData.whatsappPrimary}</a>
        </li>
        <li>
          <span class="text-sand/60">WhatsApp:</span>
          <a class="gold-link ml-2" target="_blank" rel="noreferrer" href={whatsappLinks.secondary}>{siteData.whatsappSecondary}</a>
        </li>
      </ul>
    </div>

    <div>
      <p class="text-sm font-semibold text-white">Location</p>
      <p class="mt-3 text-sm text-sand/80">{siteData.location}</p>
      <div class="mt-4 flex flex-wrap gap-3 text-sm text-sand/80">
        <a class="gold-link" href={siteData.social.instagram} target="_blank" rel="noreferrer">Instagram</a>
        <a class="gold-link" href={siteData.social.facebook} target="_blank" rel="noreferrer">Facebook</a>
        <a class="gold-link" href={siteData.social.tiktok} target="_blank" rel="noreferrer">TikTok</a>
        <a class="gold-link" href={siteData.social.pinterest} target="_blank" rel="noreferrer">Pinterest</a>
      </div>
    </div>
  </div>

  <div class="container-shell mt-8 border-t border-white/10 pt-4 text-xs text-sand/60">
    &copy; {currentYear} {siteData.name}. All rights reserved.
  </div>
</footer>
