---
{% set offers = offers %}
<section class="container section-pad svc-page">
  <header class="svc-hero">
    <picture>
      <source media="(max-width: 720px)" srcset="{{ offers.hero.image_mobile }}">
      <img class="svc-hero-img" src="{{ offers.hero.image }}" alt="{{ offers.hero.alt }}" loading="eager" decoding="async">
    </picture>
    <div class="svc-hero-body">
      <h1>{{ offers.hero.title }}</h1>
      <p class="lead">{{ offers.hero.subtitle }}</p>
      <div class="svc-cta">
        <a class="btn btn-primary" href="https://wa.me/970599797245?text=Hi%20Tamer%2C%20I%27d%20like%20to%20book%20a%2020-min%20discovery%20call" target="_blank" rel="noopener">Book a 20-min call</a>
        <a class="btn" href="https://wa.me/970599797245" target="_blank" rel="noopener">WhatsApp</a>
        <a class="btn btn-ghost" href="mailto:ai.visionary.pioneer@gmail.com?subject=Training%20%26%20Consulting%20inquiry">Email</a>
      </div>
    </div>
  </header>

  <section class="svc-who">
    <h2>Who I help</h2>
    <ul class="svc-who-list">
      {% for w in offers.who %}<li>{{ w }}</li>{% endfor %}
    </ul>
  </section>

  <section class="svc-workshops">
    <h2>Signature workshops</h2>
    <div class="svc-grid">
      {% for w in offers.workshops %}
      <article class="svc-card">
        <figure class="svc-thumb"><img src="{{ w.thumb }}" alt="{{ w.alt }}" loading="lazy" decoding="async"></figure>
        <div class="svc-card-body">
          <h3>{{ w.title }}</h3>
          <p class="svc-meta">{{ w.duration }} • {{ w.level }} • {{ w.format }}</p>
          <ul class="svc-bullets">{% for o in w.outcomes %}<li>{{ o }}</li>{% endfor %}</ul>
          <p class="svc-tools"><strong>Tools:</strong> {{ w.tools | join(', ') }}</p>
          <div class="svc-card-actions">
            <a class="btn btn-primary" href="mailto:ai.visionary.pioneer@gmail.com?subject=Workshop%20syllabus%20request%20(%20{{ w.id }}%20)">Get syllabus</a>
            <a class="btn" href="https://wa.me/970599797245?text=Workshop:%20{{ w.title | urlencode }}" target="_blank" rel="noopener">WhatsApp</a>
          </div>
        </div>
      </article>
      {% endfor %}
    </div>
  </section>

  <section class="svc-packages">
    <h2>Consulting packages</h2>
    <div class="svc-grid">
      {% for p in offers.packages %}
      <article class="svc-card">
        <figure class="svc-thumb"><img src="{{ p.thumb }}" alt="{{ p.alt }}" loading="lazy" decoding="async"></figure>
        <div class="svc-card-body">
          <h3>{{ p.title }}</h3>
          <p class="svc-meta">{{ p.who }}</p>
          <ul class="svc-bullets">{% for d in p.deliverables %}<li>{{ d }}</li>{% endfor %}</ul>
          <p class="svc-result"><strong>Outcome:</strong> {{ p.result }}</p>
          <div class="svc-card-actions">
            <a class="btn btn-primary" href="https://wa.me/970599797245?text=Package:%20{{ p.title | urlencode }}" target="_blank" rel="noopener">Discuss</a>
            <a class="btn btn-ghost js-copy" data-copy="https://wa.me/970599797245">Copy WhatsApp</a>
          </div>
        </div>
      </article>
      {% endfor %}
    </div>
  </section>

  <section class="svc-cases">
    <h2>Mini case snippets</h2>
    <div class="svc-grid">
      {% for c in offers.cases %}
      <article class="svc-card">
        <figure class="svc-thumb"><img src="{{ c.thumb }}" alt="{{ c.alt }}" loading="lazy" decoding="async"></figure>
        <div class="svc-card-body">
          <h3>{{ c.title }}</h3>
          <p class="svc-meta"><strong>Problem:</strong> {{ c.problem }}</p>
          <p class="svc-meta"><strong>Approach:</strong> {{ c.approach }}</p>
          <p class="svc-meta"><strong>Result:</strong> {{ c.result }}</p>
        </div>
      </article>
      {% endfor %}
    </div>
  </section>

  <section class="svc-process">
    <h2>How we’ll work</h2>
    <figure class="svc-process-fig">
      <img src="{{ offers.process.image }}" alt="{{ offers.process.alt }}" loading="lazy" decoding="async">
    </figure>
    <ol class="svc-steps">{% for s in offers.process.steps %}<li><strong>{{ s.title }}</strong> — {{ s.desc }}</li>{% endfor %}</ol>
  </section>

  <section class="svc-faq">
    <h2>FAQs</h2>
    <div class="svc-faq-list">
      {% for f in offers.faq %}
      <details class="svc-faq-item">
        <summary>{{ f.q }}</summary>
        <p>{{ f.a }}</p>
      </details>
      {% endfor %}
    </div>
  </section>

  <section class="svc-cta">
    <figure class="svc-cta-bg">
      <img src="{{ offers.cta.image }}" alt="{{ offers.cta.alt }}" loading="lazy" decoding="async">
    </figure>
    <div class="svc-cta-body">
      <h2>{{ offers.cta.title }}</h2>
      <p class="lead">{{ offers.cta.subtitle }}</p>
      <div class="svc-cta-actions">
        {% for b in offers.cta.buttons %}
          <a class="btn {% if loop.index == 1 %}btn-primary{% endif %}" href="{{ b.url }}" target="_blank" rel="noopener">{{ b.label }}</a>
        {% endfor %}
      </div>
    </div>
  </section>
</section>

<script defer src="{{ '/js/services.js' | url }}"></script>
