{# Macro: Pillars(title, subtitle, list) #}
{% macro Pillars(title, subtitle, list) %}
<section class="pillars container section-pad">
  <header class="section-head">
    <h2 class="section-title">{{ title }}</h2>
    {% if subtitle %}<p class="section-sub">{{ subtitle }}</p>{% endif %}
  </header>
  <div class="pillars-grid">
    {% for p in list %}
      <a class="pillar-tile" href="{{ '/blog/' | url }}?pillar={{ p.slug }}" style="--bg:url('{{ p.image }}')">
        <div class="tile-overlay"></div>
        <div class="tile-text">
          <h3>{{ p.title }}</h3>
          {% if p.summary %}<p>{{ p.summary }}</p>{% endif %}
        </div>
      </a>
    {% endfor %}
  </div>
</section>
{% endmacro %}
