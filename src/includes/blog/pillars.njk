{% macro Pillars(title, intro, items) %}
<section class="pillars">
  <div class="section-head">
    <h2 class="section-title">{{ title }}</h2>
    {% if intro %}<p class="section-intro">{{ intro }}</p>{% endif %}
  </div>

  <div class="pillars-grid">
    {% if items and items.length %}
      {% for p in items %}
        <article class="pillar" style="background-image: url('{{ p.bg }}');">
          <div class="pillar-overlay"></div>
          <div class="pillar-card">
            <div class="pillar-icon">{{ p.icon }}</div>
            <h3 class="pillar-title">{{ p.title }}</h3>
            <p class="pillar-desc">{{ p.desc }}</p>
          </div>
        </article>
      {% endfor %}
    {% else %}
      <p class="empty">No pillars data found. Check <code>/src/_data/blog_pillars.json</code>.</p>
    {% endif %}
  </div>
</section>
{% endmacro %}
