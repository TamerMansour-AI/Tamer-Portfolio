{# Macro: PostCard(post) #}
{% macro PostCard(post) %}
<article class="post-card js-post" data-tags="{{ (post.data.tags or []).join(',') }}" data-cat="{{ post.data.category or '' }}">
  <a class="post-link" href="{{ post.url | url }}">
    <h3 class="post-title">{{ post.data.title }}</h3>
  </a>
  <div class="post-meta">
    {% set _d = post.date %}
    <time datetime="{{ _d.toISOString().slice(0,10) }}">{{ _d.toLocaleDateString('en-GB', {year:'numeric', month:'short', day:'2-digit'}) }}</time>
    {% if post.data.category %}<span class="dot">â€¢</span><span class="cat">{{ post.data.category }}</span>{% endif %}
  </div>
  {% if post.data.excerpt %}<p class="post-excerpt">{{ post.data.excerpt }}</p>{% endif %}
</article>
{% endmacro %}
