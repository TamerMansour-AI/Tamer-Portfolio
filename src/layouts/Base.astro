---
import ThemeToggle from '../components/ThemeToggle.astro';
const { lang='en', title='Tamer Mansour' } = Astro.props;
---
<!DOCTYPE html>
<html lang={lang} data-theme="light">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&family=Cairo:wght@400;700&display=swap" rel="stylesheet" />
  </head>
  <body class="bg-[var(--off)] text-[var(--black)] transition-colors">
    <header class="w-full flex justify-between items-center p-4 max-w-6xl mx-auto">
      <a href={`/${lang}/`} class="font-bold text-lg">Tamer</a>
      <nav class="space-x-4">
        <a href={`/${lang}/about`} class="hover:text-[var(--olive)]">About</a>
        <a href={`/${lang}/projects`} class="hover:text-[var(--olive)]">Projects</a>
        <a href={`/${lang}/media`} class="hover:text-[var(--olive)]">Media</a>
        <a href={`/${lang}/blog`} class="hover:text-[var(--olive)]">Blog</a>
        <a href={`/${lang}/contact`} class="hover:text-[var(--olive)]">Contact</a>
      </nav>
      <ThemeToggle />
    </header>
    <main class="min-h-[70vh]">
      <slot />
    </main>
    <footer class="text-center p-6 text-sm opacity-75">
      Â© {new Date().getFullYear()} Tamer Mansour
    </footer>
    <script>
      // store theme choice
      const html=document.documentElement;
      if(localStorage.theme) html.dataset.theme=localStorage.theme;
      window.toggleTheme=()=>{html.dataset.theme=html.dataset.theme==='dark'?'light':'dark';localStorage.theme=html.dataset.theme;}
    </script>
  </body>
</html>
